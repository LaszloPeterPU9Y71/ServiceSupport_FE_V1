{
  "name": "service-support-fe-v1",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "api:generate": "openapi-generator-cli generate -i ./openapi.yaml -g typescript-angular -o ./src/app/api --skip-validate-spec",

    "docker-build": "docker build --no-cache -t delano0b/servicesupport_fe_v1:latest .",
    "docker-push": "docker push delano0b/servicesupport_fe_v1:latest",
    "docker-run": "docker run -d -p 4200:80 --name servicesupport_fe_v1:latest-general delano0b/servicesupport_fe_v1",
    "docker-stop": "docker stop servicesupport_fe_v1 || true && docker rm servicesupport_fe_v1 || true",
    "docker": "npm run build && npm run docker-build && npm run docker-push"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.11",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.11",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "jwt-decode": "^4.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@openapitools/openapi-generator-cli": "^2.24.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
